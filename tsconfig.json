{
  "compilerOptions": {
    "outDir": "./lib/",
    "moduleResolution": "node",
    "module": "es2020",
    "target": "es2020",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "tests",
    "lib"
  ]
}
