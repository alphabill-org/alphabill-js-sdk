{
  "compilerOptions": {
    "outDir": "./lib/",
    "declaration": true,
    "moduleResolution": "node16",
    "module": "node16",
    "target": "es2020",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": false,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "tests",
    "lib",
    "examples"
  ]
}
