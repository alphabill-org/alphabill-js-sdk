{
  "engines": {
    "node": ">=18.0.0"
  },
  "name": "@alphabill/alphabill-js-sdk",
  "version": "1.0.1",
  "type": "module",
  "exports": {
    ".": "./lib/main.js",
    "./lib/*": "./lib/*"
  },
  "scripts": {
    "clean:docs": "node -e \"try { require('fs').rmSync('./docs', { recursive: true, force: true }); } catch(err) { console.log(err); }\"",
    "build": "tsc -p tsconfig.json && tsc -p tsconfig.examples.json",
    "test": "jest tests/unit/",
    "test:ci": "jest tests/unit/ --ci --reporters=default --reporters=jest-junit",
    "docker:alphabill": "docker compose -f tests/integration/docker-compose.yml up -d",
    "docker:alphabill:down": "docker compose -f tests/integration/docker-compose.yml down -v",
    "integration-test": "jest tests/integration/ --runInBand --detectOpenHandles",
    "integration-test:ci": "jest tests/integration/ --runInBand --ci --reporters=default --reporters=jest-junit",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --fix",
    "typedoc": "npm run clean:docs && typedoc --out docs/ --entryPointStrategy expand ./src"
  },
  "dependencies": {
    "@noble/curves": "1.8.1",
    "@noble/hashes": "1.7.1",
    "base64-js": "1.5.1",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "9.23.0",
    "@types/jest": "29.5.14",
    "@types/uuid": "10.0.0",
    "eslint": "9.23.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-prettier": "5.2.3",
    "globals": "16.0.0",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "prettier": "3.5.3",
    "ts-jest": "29.2.6",
    "typedoc": "0.28.1",
    "typescript": "5.8.2",
    "typescript-eslint": "8.27.0"
  },
  "jest-junit": {
    "outputDirectory": "./coverage",
    "outputName": "junit.xml"
  }
}
