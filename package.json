    "lint:fix": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" --fix"
  },
  "dependencies": {
    "cbor": "9.0.2",
    "cbor-web": "9.0.2",
    "uuid": "9.0.1",
    "@noble/curves": "1.4.0",
    "base64-js": "1.5.1"
