{
  "name": "@alphabill/alphabill-js-sdk",
  "version": "1.0.0",
  "type": "module",
  "exports": {
    "./lib/*": "./lib/*"
  },
  "scripts": {
    "build": "tsc -d",
    "test": "jest",
    "test:ci": "jest tests/ --ci --reporters=default --reporters=jest-junit",
